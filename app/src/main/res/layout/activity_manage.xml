<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/manage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Dashboard"
        android:textColor="@color/priceColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Nút để quản lý khách hàng -->
        <FrameLayout
            android:id="@+id/manage_customer_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_customer">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Customer"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </FrameLayout>

        <!-- Nút để quản lý đồ chơi (Toys) -->
        <FrameLayout
            android:id="@+id/manage_toy_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/rounded_toy">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Toy"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!-- Nút để quản lý danh mục (Categories) -->
        <FrameLayout
            android:id="@+id/manage_category_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_category">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Category"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </FrameLayout>

        <!-- Nút để quản lý hóa đơn (Orders) -->
        <FrameLayout
            android:id="@+id/manage_order_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_order">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Order"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>

    <!-- Nút để đăng xuất -->
    <FrameLayout
        android:id="@+id/logout_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button_custom"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Logout"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </FrameLayout>

</LinearLayout>
