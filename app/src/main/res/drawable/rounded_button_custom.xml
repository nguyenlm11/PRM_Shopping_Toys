<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi button được nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF4081" /> <!-- Màu đậm hơn khi nhấn -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Trạng thái bình thường -->
    <item>
        <shape>
            <solid android:color="#E91E63" /> <!-- Màu bình thường -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
